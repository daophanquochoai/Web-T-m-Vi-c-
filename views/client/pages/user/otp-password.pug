extends ../../layouts/login-layout.pug 
include ../../mixins/alert.pug

block main 
    +alert-error(4000)

    .container.my-5
        .row.justify-content-center(otp-password)
            .col-6
                h1.text-center Lấy lại mật khẩu  
                form(action="/user/password/otp", method="post" style="display: flex; flex-direction: column;") 
                    div(class="form-group")
                        label(for="email") Email: 
                        input(
                            type="email"
                            id="email"
                            name="email"
                            class="form-control"
                            required
                            value=email
                            readonly 
                        )
                    div(class="form-group")
                        label(for="otp") Mã OTP: 
                        input(
                            type="text"
                            id="otp"
                            name="otp"
                            class="form-control"
                            required
                        )
                    button(
                        class="btn btn-primary btn-block"
                        type="submit"
                        style="width: 50%; text-align: center; margin: auto;"
                    ) Xác nhận  