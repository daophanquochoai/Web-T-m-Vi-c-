extends ../../layouts/announce.pug 
include ../../mixins/box-head.pug

block main 
    .container.my-3
        +box-head("Danh sách công việc đã nộp")

        if(announces.length > 0)
            table(class="table table-hover")
                thead   
                    th STT 
                    th Tên công việc 
                    th Logo công ty 
                    th Tên công ty 
                    th Ngày nộp đơn 
                    th Ngày nhận kết quả
                    th Kết quả 
                tbody 
                    each item, index in announces
                        tr 
                            td #{index + 1} 
                            td #{item.infoCT_CV.tenCV} 
                            td 
                                img(src=item.infoCT_CV.logo style="width:60px; height:60px; object-fit:cover" , alt="")
                            td #{item.infoCT_CV.tenCT} 
                            td #{item.thoiGianNop}
                            td 
                                if(item.thoiGianGui)
                                    | #{item.thoiGianGui}
                                else 
                                    b Chưa có 
                            td 
                                if(item.daXem)
                                    if(item.ketQua)
                                        a(href=`/announce/${item.maCV}/${item.userId}`) 
                                            b(style="color: green;") Đạt
                                    else 
                                        a(href=`/announce/${item.maCV}/${item.userId}`) 
                                            b(style="color: red;") Rớt
                                        
                                else 
                                    b Chưa có kết quả
        else 
            .col-12
                div(class="text-center alert alert-danger" ) Không tìm thấy công việc
        
        div(class="paginationn" pagination=pagination) 

block script
    script(src="/js/pagination.js")  
    

