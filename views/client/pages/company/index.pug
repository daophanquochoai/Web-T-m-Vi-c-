extends ../../layouts/company.pug

block main 
    .section-list.container
        .section-item.row.row-cols-1.row-cols-md-1.row-cols-lg-1.p-4.justify-content-center
            .item.col-sm-12.col-md-12.col-lg-12.col-xl-10.mb-4
                if(companies.length > 0)
                    each company in companies 
                        .box.mb-4.d-flex
                            .item-left.d-flex.mb-2
                                .item-img
                                    a(href=`/companys/detail/${company.slug}`) 
                                        img(src=company.logo, alt="logo công ty")
                                .ttle-job 
                                    .name-job 
                                        a(href=`/companys/detail/${company.slug}`) #{company.tenCT}
                                    //- Điền vào tên
                                    .name-comp Địa điểm : #{company.diaDiem}
                                    //- Điền tên công ty 
                            .item-right
                                .info-job.d-flex.flex-column
                                    span.desr-title Mô tả :
                                    span.desr 
                                        | !{company.moTa}
                else 
                    .col-12
                        div(class="text-center alert alert-danger" ) Không tìm thấy công ty 
        div(class="paginationn" pagination=pagination) 
        